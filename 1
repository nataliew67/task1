fun main() {
//ЗАДАЧА 1
// Создать приложение, которое подсчитывает количество подряд идущих одинаковых
// символов во введенной строке. На вход подается, например, строка AAADSSSRRTTHAAAA.
// На выходе получаем A3DS3R2T2HA4. То есть, если количество подряд идущих
// символов меньше двух, то мы не пишем единицу.
    print("Введите строку: ")
    println("Количество подряд идущих одинаковых символов во введенной строке: " + taskfirst(readln()))
}
fun taskfirst(string: String): String {
    var result = ""
    var counter = 1
    var s = string[0]
    for (item in string.substring(1)) {
        if (s != item) {
            if (counter > 1) {
                result += "$s$counter"
            } else {
                result += s
            }
            counter = 1
            s = item

        } else {
            counter++
        }
    }
    if (counter > 1) {
        result += "$s$counter"
    } else {
        result += s
    }
    return result
}
