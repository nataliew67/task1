fun main() {
//ЗАДАЧА 3
//Создать приложение, которое преобразует
// введенное пользователем натуральное
// число из 10-ичной системы в двоичную.
    print("Введите натуральное число:")
    println("Результат: " + taskthird(readln().toInt()))
}

fun taskthird(a: Int): Int {
    var a = a
    var binary = 0
    var r = 1
    var mod: Int
    while (a > 0) {
        mod = a % 2   //остаток от деления на 2(для получения битового значения)
        a /= 2
        binary += mod * r
        r *= 10   //чтобы сдвинуть битовое значение влево
    }
    return binary
}
